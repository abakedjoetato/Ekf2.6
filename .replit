modules = ["python-3.11", "postgresql-16", "python3"]
[nix]
channel = "stable-24_05"
packages = ["libsodium", "nettle", "openssh", "openssl"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Full Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Clean Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Working Bot"

[[workflows.workflow]]
name = "Simple Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Full Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main_full.py"

[[workflows.workflow]]
name = "Clean Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main_clean.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Working Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python working_bot.py"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python advanced_main.py"]

[[ports]]
localPort = 5000
externalPort = 80
